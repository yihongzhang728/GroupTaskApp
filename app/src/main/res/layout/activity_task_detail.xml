<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskDetail">

    <EditText
        android:id="@+id/name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/name"
        style="@style/Base.TextAppearance.AppCompat.Large"
        />

    <EditText
        android:id="@+id/deadline_text"
        android:text="@string/deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text"
        android:layout_marginBottom="30dp"
        style="@style/Base.TextAppearance.AppCompat.Large"
        />
    <Button
        android:id="@+id/btn_when"
        android:layout_alignRight="@id/deadline_text"
        android:layout_alignBottom="@id/deadline_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="DATE"
        style="@style/Base.TextAppearance.AppCompat.Large"
        />

    <EditText
        android:id="@+id/assignee_text"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deadline_text"
        android:layout_marginBottom="30dp"
        android:text="@string/assignee"
        />

    <ImageButton
        android:id="@+id/btn_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/assignee_text"
        android:layout_alignBottom="@id/assignee_text"
        android:src="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/btn_cancel"
        android:text="CANCEL"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />

    <Button
        android:id="@+id/btn_create"
        android:text="CREATE"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp" />

</RelativeLayout>
